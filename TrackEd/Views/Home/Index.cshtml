@{
    ViewData["Title"] = "Home Page";
    ViewData["href-css"] = "~/css/index.css";
}
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager



<section class="welcome-hero">
    <div class="welcome-overlay">
        <h1>Welcome to TrackED</h1>
        <p>Empowering the nursing program to track and support students by geo-location.</p>
        <div class="welcome-actions">
            <a asp-area="" asp-controller="Dashboard" class="btn-primary" asp-action="Index">Go to Dashboard</a>
            @if (SignInManager.IsSignedIn(User)) {
                <a class="btn-secondary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Manage Account</a>
            }
            else {
                <a class="btn-secondary" asp-area="Identity" asp-page="/Account/Login">Login</a>
            }
        </div>
    </div>
</section>

<section class="info-boxes">
    <div class="info-box">
        <h2>Student Tracking</h2>
        <p>Monitor nursing students' locations and progress in real time for better support and safety.</p>
    </div>
    <div class="info-box">
        <h2>Geo-Location Insights</h2>
        <p>Visualize student placements and clinical assignments on an interactive map for program planning.</p>
    </div>
    <div class="info-box">
        <h2>Program Analytics</h2>
        <p>Access key metrics and reports to improve outcomes and streamline administration.</p>
    </div>
</section>

<div class="Aboutus">
    <h2>About TrackEd</h2>
    <P>TrackED is a web-based platform designed to help nursing programs efficiently monitor and support their students during clinical placements.<br>
     By integrating geo-location technology, TrackED enables professors and administrators to track where students are during their rotations, ensuring safety, accountability, and streamlined communication.</P>
</div>

<div class="Purpose">
    <h2>Purpose of TrackEd</h2>
    <p>The system provides real time tracking and insights that highlight student activity, attendance patterns, and placement distribution. <br> 
These analytics help program coordinators make data driven decisions to improve scheduling, optimize supervision, and enhance overall program performance.</p>
</div>